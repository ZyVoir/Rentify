<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_item_list"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/meja"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/name_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Meja kayu / Meja belajar"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/price_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Rp. 30.000 / "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/time_stamp_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Month"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>